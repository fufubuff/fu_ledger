page{
  background: #f8f8f8;
}

.user_info_wrapper{
  display: flex;
  flex-direction: column; /* 改为列布局 */
  align-items: center; /* 子项居中对齐 */
  padding: 20rpx;
  box-sizing: border-box;
  width: 100%;
  background: #ffd700;
}

.user_ifno_avatar_wrapper{
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  overflow: hidden;
  margin-bottom: -15rpx; /* 头像与用户名之间的间距 */
}

.user_info_avatar{
  width: 100rpx;
  height: 100rpx;
}

.user_info_nickname{
  width: 600rpx;
  height: 100rpx;
  line-height: 100rpx;
  font-size: 30rpx;
  text-align: center; /* 文本居中显示 */
}

/* 菜单 */
.menus_wrapper{
  display: flex; /* 使用 flex 布局 */
  flex-wrap: wrap; /* 允许子项换行 */
  justify-content: space-around; /* 子项平均分布 */
  margin: 20rpx auto;
  padding: 20rpx;
  box-sizing: border-box;
  width: 700rpx;
  border-radius: 10rpx;
  background: #fff;
}

.menu_item{
  width: 100rpx; 
  height: 90rpx;
  margin: 10rpx; /* 确保周围有间隙 */
}

.menu_item image{
  margin: 0 auto 10rpx;
  display: block;
  width: 50rpx;
  height: 50rpx;
}

.menu_item text{
  display: block;
  width: 100%;
  height: 40rpx;
  line-height: 40rpx;
  font-size: 26rpx;
  color: #666;
  text-align: center;
}

/* 背景图片样式 */
.background_image {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: -1; /* 将背景图片放在最底层 */
}

/* 头像图片样式 */
.user_ifno_avatar {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%; /* 使头像图片为圆形 */
}