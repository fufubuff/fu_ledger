.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 100vh;
  background-color: #f0f0f0;
}

.color_picker_wrapper {
  margin: 20rpx;
  text-align: center;
}

.color_picker_wrapper text {
  font-size: 30rpx;
  margin-right: 10rpx;
}

button {
  margin-top: 20rpx;
  padding: 10rpx 20rpx;
  background-color: #007BFF;
  color: white;
  border: none;
  border-radius: 5rpx;
  font-size: 16rpx;
}