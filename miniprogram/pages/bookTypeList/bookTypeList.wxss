}


/* 列表 */
.book_type_list_wrapper{
  padding-bottom:120rpx;
  margin:0 auto;
  width:700rpx;
  overflow-x:hidden;
  background:#fff;
}
.book_type_list{
  position:relative;
  left:0;
  margin:0 auto;
  width:800rpx;
  height:80rpx;
  line-height:80rpx;
  border-bottom:1rpx solid #eee;
  overflow-x:scroll;
  transition: all .3s;
  -webkit-overflow-scrolling: touch;
}
.book_type_list.active{
  left:-100rpx;
}
.delete_icon{
  margin-top:20rpx;
  position:relative;
  float:left;
  width:40rpx;
  height:40rpx;
  background:#f00;
  border-radius:50%;
}
.delete_icon::after{
  position:absolute;
  left:50%;
  top:50%;
  transform:translate(-50%,-50%);
  content:'';
  width:20rpx;
  height:4rpx;
  background:#fff;
}
.icon_wrapper{
  margin-left:20rpx;
  margin-top:10rpx;
  float:left;
  width:60rpx;
  height:60rpx;
  background:#eee;
  border-radius:50%;
}
.icon_wrapper image{
  display:block;
  margin:10rpx auto 0;
  width:40rpx;
  height:40rpx;
}
.book_type_name{
  float:left;
  margin-left:10rpx;
  width:514rpx;
  height:80rpx;
  line-height:80rpx;
  font-size:28rpx;
}
.drag_icon{
  float:left;
  width:60rpx;
  height:80rpx;
  line-height:80rpx;
  font-size:40rpx;
  color:#eee;
}
.book_type_delete{
  float:left;
  width:100rpx;
  height:80rpx;
  line-height:80rpx;
  font-size:30rpx;
  color:#fff;
  text-align:center;
  background:#EE3B3B;
}
.add_booktype_circle {
  display: flex;
  justify-content: center; /* 水平居中 */
  align-items: center; /* 垂直居中 */
  width: 150rpx; /* 圆圈的直径 */
  height: 150rpx; /* 圆圈的直径 */
  border-radius: 75rpx; /* 圆形边框 */
  border: 2rpx solid #ccc; /* 圆圈边框样式 */
  background-color: #fff; /* 圆圈背景色 */
  margin-top: 20rpx; /* 圆圈与上方的间距 */
}

.add_booktype_wrapper {
  display: flex; /* 使用 flexbox 布局 */
  align-items: center; /* 垂直居中对齐 */
  padding: 10rpx; /* 添加内边距以增加空间 */
}

.add_booktype_btn {
  height: 100rpx; /* 确保按钮高度合适 */
  line-height: 100rpx; /* 垂直居中 */
  font-size: 30rpx;
  text-align: center;
  background: #fff;
  flex: 1; /* 让按钮占据剩余空间 */
}

.add_icon {
  width: 40rpx; /* 调整图标大小 */
  height: 40rpx;
  margin-left: 10rpx; /* 按钮和图标之间的间距 */
}
.add_booktype_box {
  display: flex;
  justify-content: center; /* 水平居中 */
  align-items: center; /* 垂直居中 */
  border: 7rpx solid rgb(255, 165, 0); /* 橙色边框 */
  padding: 10rpx; /* 内边距 */
  margin-top: 20rpx; /* 上方间距 */
  border-radius: 10rpx; /* 边框圆角 */
}
